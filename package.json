{
  "name": "lnd-ws",
  "version": "1.0.0",
  "description": "Lightning Network Daemon Wallet Segregation - A lightweight solution for segregating funds in a unified LND node",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "migrate": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev",
    "generate": "prisma generate",
    "studio": "prisma studio",
    "test": "jest",
    "update-types": "node scripts/update-types.js",
    "convert-credentials": "node scripts/convert-credentials.js",
    "docker:setup": "./scripts/docker-setup.sh",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:migrate": "docker-compose exec app npm run migrate",
    "example:client": "node examples/client.js"
  },
  "keywords": [
    "lightning",
    "lnd",
    "wallet",
    "segregation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.10.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "light-bolt11-decoder": "^3.2.0",
    "node-fetch": "^2.7.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.17.30",
    "jest": "^29.7.0",
    "prisma": "^5.10.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
